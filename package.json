{
  "name": "exterminator-bar",
  "version": "0.1.0",
  "description": "A lightweight, customizable widget for manual QA and bug reporting in web applications",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "unpkg": "dist/index.umd.js",
  "jsdelivr": "dist/index.umd.js",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:types": "tsc --emitDeclarationOnly",
    "build:all": "npm run build && npm run build:types",
    "preview": "vite preview",
    "test": "vitest",
    "prepublishOnly": "npm run build:all"
  },
  "dependencies": {
    "fabric": "^5.3.0",
    "html2canvas": "^1.4.1"
  },
  "devDependencies": {
    "@types/fabric": "^5.3.6",
    "typescript": "^5.0.4",
    "vite": "^4.3.9",
    "vitest": "^0.31.1"
  },
  "keywords": [
    "qa",
    "testing",
    "bug-reporting",
    "screenshot",
    "annotation"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/exterminator-bar"
  },
  "bugs": {
    "url": "https://github.com/yourusername/exterminator-bar/issues"
  },
  "homepage": "https://github.com/yourusername/exterminator-bar#readme",
  "publishConfig": {
    "access": "public"
  }
}